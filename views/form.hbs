<h1>Welcome {{spencerUser.firstname}} {{spencerUser.lastname}}</h1>
<h2>Please fill in the following form</h2>

<form method="POST" action="/form/submit">
  <div class="form-group">
    <label for="category">Select your favorite category</label>
    <div class="input-group">
      <select required id="category" name="category" class="custom-select">
        {{#each myDayCategories}}
        <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>